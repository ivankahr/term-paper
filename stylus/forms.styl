.form
    padding $space
    margin auto
    width 500px

.section
    position relative
    display flex
    flex-wrap wrap
    margin-left 10px
    border-left 2px solid $white
    > .label
        font-weight bold

.separated
    width 100%
    border-top 2px solid $white
    margin-top 10px
    padding 10px 0

.input-row
    padding 5px
    display flex
    width 100%
    align-items center

.label
    font-size $space*2
    padding $space

.input
    flex-grow 1
    padding $space
    font-size $space*2
    border-radius $hspace
    color $black
    border none
    outline none
    background $white

.check
    margin 10px
